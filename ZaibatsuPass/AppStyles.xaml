<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZaibatsuPass">

    <Style x:Key="appFontBaseStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Assets/nixieone.ttf#Nixie One" />
    </Style>

    <Style x:Key="appFontLarge" TargetType="TextBlock" BasedOn="{StaticResource ResourceKey=appFontBaseStyle}" >
        <Setter Property="FontSize" Value="50" />
    </Style>

</ResourceDictionary>
